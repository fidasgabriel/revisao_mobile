<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TextViewPage" android:orientation="vertical" android:padding="32sp">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/digiteTxt" android:hint="Digite" android:layout_marginBottom="12dp"
            android:textColor="#0e0e0e" android:textSize="28sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/explicacaoTxtView"
            android:layout_marginBottom="48dp" android:textSize="20sp"/>
    <Button
            android:text="Converter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnConvertTxt" android:layout_marginBottom="28dp"
            android:textSize="18sp" android:onClick="converterEdtText"/>
    <TextView
            android:text="Resultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/resultadoTxt" android:textSize="30sp"
            android:textColor="#0e0e0e"/>
</LinearLayout>