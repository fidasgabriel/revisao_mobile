<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ListViewPersonalizadaPage" android:orientation="vertical" android:padding="24sp"
        android:paddingBottom="0sp">

    <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/listinhaPerso" android:layout_marginBottom="8sp"
            android:dividerHeight="2sp" android:divider="#932339"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/txtExplicacaoListViewPerso" android:textSize="17sp"
            android:textColor="#0f0f0f"/>
</LinearLayout>