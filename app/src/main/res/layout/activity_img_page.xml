<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ImgPage" android:orientation="vertical" android:padding="32sp">

    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/titleImage" android:textSize="28sp"
            android:textAlignment="center" android:layout_marginBottom="24sp"/>
    <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/trocarImg"
            android:layout_marginBottom="12sp" android:layout_gravity="center"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/explicacaoImg" android:textSize="20sp"
            android:layout_marginBottom="24sp"/>
    <Button
            android:text="Trocar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnTrocarFoto" android:onClick="trocarImg"/>
</LinearLayout>